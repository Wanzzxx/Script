local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

local Window = Fluent:CreateWindow({
    Title = "Fluent " .. Fluent.Version,
    SubTitle = "WANZ HUB",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl
})

local Tabs = {
    Main = Window:AddTab({ Title = "Main", Icon = "" }),
    Settings = Window:AddTab({ Title = "Settings", Icon = "settings" })
}

-- Service

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local VirtualInputManager = game:GetService("VirtualInputManager")

local Options = Fluent.Options

-- Toggles

local ATTACK_RADIUS = 15
local TELEPORT_RADIUS = 300

local AutoFarmToggle = Tabs.Main:AddToggle("AutoFarm", {
    Title = "Auto Farms Mob",
    Default = false
})

AutoFarmToggle:OnChanged(function(Value)
    if Value then
        _G.Clicking = true

        task.spawn(function()
            while Options.AutoFarm.Value do
                local char = Players.LocalPlayer.Character
                local hrp = char and char:FindFirstChild("HumanoidRootPart")
                local hum = char and char:FindFirstChildWhichIsA("Humanoid")
                if not hrp or not hum then task.wait(0.1) continue end

                local mobFolder = workspace:FindFirstChild("Enemy") and workspace.Enemy:FindFirstChild("Mob")
                if mobFolder then
                    local closestMob, closestDist

                    for _, mob in ipairs(mobFolder:GetChildren()) do
                        local mobHRP = mob:FindFirstChild("HumanoidRootPart")
                        local mobHumanoid = mob:FindFirstChildWhichIsA("Humanoid")

                        if mobHRP and mobHumanoid and mobHumanoid.Health > 0 then
                            local dist = (mobHRP.Position - hrp.Position).Magnitude
                            if not closestDist or dist < closestDist then
                                closestMob = mob
                                closestDist = dist
                            end
                        end
                    end

                    if closestMob and closestDist then
                        local mobHRP = closestMob:FindFirstChild("HumanoidRootPart")
                        local mobHumanoid = closestMob:FindFirstChildWhichIsA("Humanoid")

                        if closestDist > ATTACK_RADIUS and closestDist < TELEPORT_RADIUS then
                            -- Tween to mob if not in attack range
                            hum.PlatformStand = true
                            local goal = mobHRP.CFrame * CFrame.new(0, 0, 3)
                            local tween = TweenService:Create(hrp, TweenInfo.new(0.3, Enum.EasingStyle.Linear), {CFrame = goal})
                            tween:Play()
                            tween.Completed:Wait()
                            hum.PlatformStand = false
                            task.wait(0.1)
                        end

                        -- If in attack range, spam LMB
                        if closestDist <= ATTACK_RADIUS then
                            VirtualInputManager:SendMouseButtonEvent(0, 0, 0, true, game, 0)
                            task.wait(0.015)
                            VirtualInputManager:SendMouseButtonEvent(0, 0, 0, false, game, 0)
                        end
                    end
                end

                task.wait(0.05)
            end
        end)

    else
        _G.Clicking = false
    end
end)

-- Auto Skill
local VirtualInputManager = game:GetService("VirtualInputManager")
local EnemyFolder = workspace:WaitForChild("Enemy")
local MobFolder = EnemyFolder:WaitForChild("Mob")

Options.AutoSkillBoss = Tabs.Main:AddToggle("AutoSkillBoss", {
    Title = "Auto Skill When Bosses",
    Default = false,
})

Options.AutoSkillBoss:OnChanged(function(Value)
    if Value then
        task.spawn(function()
            while Options.AutoSkillBoss.Value do
                if #MobFolder:GetChildren() == 1 then
                    -- Press Z, X, C, V
                    for _, key in ipairs({ Enum.KeyCode.Z, Enum.KeyCode.X, Enum.KeyCode.C, Enum.KeyCode.V }) do
                        pcall(function()
                            VirtualInputManager:SendKeyEvent(true, key, false, game)
                            task.wait(0.05)
                            VirtualInputManager:SendKeyEvent(false, key, false, game)
                        end)
                        task.wait(0.05)
                    end
                end
                task.wait(1)
            end
        end)
    end
end)

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local LocalPlayer = Players.LocalPlayer

-- AUTO REPLAY TOGGLE
Options.AutoReplay = Tabs.Main:AddToggle("AutoReplay", {
    Title = "Auto Replay",
    Default = false,
})

Options.AutoReplay:OnChanged(function(Value)
    if Value then
        task.spawn(function()
            while Options.AutoReplay.Value do
                local winUI = LocalPlayer:FindFirstChild("PlayerGui")
                    and LocalPlayer.PlayerGui:FindFirstChild("Win")
                    and LocalPlayer.PlayerGui.Win:FindFirstChild("Frame")

                if winUI and winUI.Visible then
                    local args = { [1] = "RPlay" }
                    pcall(function()
                        ReplicatedStorage:WaitForChild("Events"):WaitForChild("WinEvent"):WaitForChild("Buttom"):FireServer(unpack(args))
                    end)
                    task.wait(1) -- Optional delay after sending
                end

                task.wait(0.5)
            end
        end)
    end
end)

-- AUTO NEXT TOGGLE
Options.AutoNext = Tabs.Main:AddToggle("AutoNext", {
    Title = "Auto Next",
    Default = false,
})

Options.AutoNext:OnChanged(function(Value)
    if Value then
        task.spawn(function()
            while Options.AutoNext.Value do
                local winUI = LocalPlayer:FindFirstChild("PlayerGui")
                    and LocalPlayer.PlayerGui:FindFirstChild("Win")
                    and LocalPlayer.PlayerGui.Win:FindFirstChild("Frame")

                if winUI and winUI.Visible then
                    local args = { [1] = "NextLv" }
                    pcall(function()
                        ReplicatedStorage:WaitForChild("Events"):WaitForChild("WinEvent"):WaitForChild("Buttom"):FireServer(unpack(args))
                    end)
                    task.wait(1)
                end

                task.wait(0.5)
            end
        end)
    end
end)

-- Settings
SaveManager:SetLibrary(Fluent)
InterfaceManager:SetLibrary(Fluent)
SaveManager:IgnoreThemeSettings()
SaveManager:SetIgnoreIndexes({})
InterfaceManager:SetFolder("FluentScriptHub")
SaveManager:SetFolder("FluentScriptHub/specific-game")
InterfaceManager:BuildInterfaceSection(Tabs.Settings)
SaveManager:BuildConfigSection(Tabs.Settings)

Window:SelectTab(1)

Fluent:Notify({
    Title = "Fluent",
    Content = "The script has been loaded.",
    Duration = 8
})

SaveManager:LoadAutoloadConfig()
